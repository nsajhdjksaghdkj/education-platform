<Module>
  <ModulePrefs title="Yohoho Lessons"/>
  <Content type="html">
<![CDATA[
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8" />
<title>Yohoho – Interactive Lesson Activity</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: hidden;
    background: #0f172a;
  }
  #gameFrame {
    width: 100%;
    height: 100%;
    border: none;
  }
  #topBar {
    background: #1e293b;
    color: white;
    padding: 10px 15px;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #fsBtn {
    background: #3b82f6;
    border: none;
    padding: 8px 14px;
    border-radius: 6px;
    color: white;
    cursor: pointer;
  }
</style>

</head>
<body>

<div id="topBar">
  <span>Interactive Lesson Activity – Yohoho</span>
  <button id="fsBtn" onclick="openFullscreen()">Fullscreen</button>
</div>

<iframe id="gameFrame" src="https://lessons1.online/_games/yohoho/"></iframe>

<script>
function openFullscreen(){
  var win = window.open("", "_blank");
  win.document.write(`
    <html>
    <head>
      <meta charset="UTF-8"/>
      <title>Yohoho</title>
      <style>
        html, body { margin:0; padding:0; height:100%; overflow:hidden; }
        iframe { width:100%; height:100%; border:0; }
      </style>
    </head>
    <body>
      <iframe src="https://lessons1.online/_games/yohoho/"></iframe>
    </body>
    </html>
  `);
  win.document.close();
}
</script>

</body>
</html>
]]>
